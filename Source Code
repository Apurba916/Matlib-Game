
import random


def play_game():
    print("I woke up in the ... today and saw a ... ... After waking up, I went to ... to ... myself.")
    adverb_of_time = input("Enter an adverb of time: ")
    adjective = input("Enter an adjective: ")
    noun = input("Enter a noun: ")
    adverb_of_place = input("Enter an adverb of place: ")
    verb = input("Enter a verb: ")
    print(f"I woke up in the {adverb_of_time} today and saw a {adjective} {noun}. After waking up, I went to {adverb_of_place} to {verb} myself.")

    print("Every morning, I ... my ... ... I usually do this ... in the ...")
    verb2 = input("Enter a verb: ")
    noun2 = input("Enter a noun: ")
    adverb_of_manner = input("Enter an adverb of manner: ")
    adverb_of_frequency = input("Enter an adverb of frequency: ")
    adverb_of_time2 = input("Enter an adverb of time: ")
    print(f"Every morning, I {verb2} my {noun2} {adverb_of_manner}. I usually do this {adverb_of_frequency} in the {adverb_of_time2}.")

    print("I had a hearty breakfast and started my day with a ... routine at ... I told myself: '...' to set a positive tone for the day.")
    adjective2 = input("Enter an adjective: ")
    adverb_of_place2 = input("Enter an adverb of place: ")
    affirmation = input("Enter an affirmation: ")
    print(f"I had a hearty breakfast and started my day with a {adjective2} routine at {adverb_of_place2}. I told myself: '{affirmation}' to set a positive tone for the day.")

while True:
    play_game()
    again = input("Do you want to play again? (yes/no): ").strip().lower()
    if again != "yes":
        print("Thanks for playing!")
        break

